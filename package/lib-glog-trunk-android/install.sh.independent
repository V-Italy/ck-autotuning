if [ "${?}" != "0" ] ; then
  echo "Error: cmake failed!"
  exit 1
fi

############################################################
echo ""
echo "Building package ..."

rm -rf install

make VERBOSE=1 -j ${CK_HOST_CPU_NUMBER_OF_PROCESSORS} &> xyz
if [ "${?}" != "0" ] ; then
