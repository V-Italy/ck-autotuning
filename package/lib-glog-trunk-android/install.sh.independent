cmake -DCMAKE_BUILD_TYPE=${CK_ENV_CMAKE_BUILD_TYPE:-Release} \
      -DCMAKE_C_COMPILER:PATH="${CK_CC_PATH_FOR_CMAKE}" \
      -DCMAKE_CXX_COMPILER:PATH="${CK_CXX_PATH_FOR_CMAKE}" \
      -DCMAKE_C_FLAGS="${CK_CC_FLAGS_FOR_CMAKE} -DANDROID" \
      -DCMAKE_CXX_FLAGS="${CK_CXX_FLAGS_FOR_CMAKE} -DANDROID" \
      -DCMAKE_AR:PATH="/home/fursin/fggprogs/android-ndk-r11c/toolchains/aarch64-linux-android-4.9/prebuilt/linux-x86_64/bin/aarch64-linux-android-gcc-ar" \
